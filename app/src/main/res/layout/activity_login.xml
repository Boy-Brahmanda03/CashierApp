<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_black"
        android:text="APLIKASI KASIR"
        android:textSize="30sp"
        android:textColor="@color/Blue"
        android:layout_centerHorizontal="true"
        android:id="@+id/txt_l1"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/txt_l2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_l1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Sign in to your account"
        android:textColor="@color/Blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/txt_l2"
        android:padding="30dp"
        android:id="@+id/lyl">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:hint="Email"
            android:fontFamily="@font/poppins_semibold"
            android:background="@drawable/button_shape"
            android:paddingLeft="10dp"
            android:backgroundTint="@color/white"
            android:id="@+id/edt_l_email"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:hint="Password"
            android:fontFamily="@font/poppins_semibold"
            android:background="@drawable/button_shape"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/white"
            android:id="@+id/edt_l_password"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lyl"
        android:text="Forget your password?"
        android:fontFamily="@font/poppins_black"
        android:textColor="@color/Blue"
        android:paddingLeft="210dp"
        android:id="@+id/txt_l3"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_l3"
        android:text="LOGIN"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_black"
        android:id="@+id/btn_l1"
        android:layout_marginTop="30dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/btn_l1"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donâ€™t have an account??"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="60dp"
            android:textColor="@color/Gray"
            android:id="@+id/txt_l4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Register"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="60dp"
            android:textColor="@color/Blue"
            android:id="@+id/txt_l5"/>

    </LinearLayout>

</RelativeLayout>