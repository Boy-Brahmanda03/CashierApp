<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splashsecondActivity">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/btn_back"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/back_button_splash"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_black"
        android:text="APLIKASI KASIR"
        android:textSize="30sp"
        android:layout_below="@id/back_button_splash"
        android:textColor="@color/Blue"
        android:layout_centerHorizontal="true"
        android:id="@+id/txt_splash_first"
        android:layout_marginTop="50dp"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_splash_first"
        android:src="@drawable/circle_blue"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/circle_img_second"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/circle_img_second"
        android:id="@+id/txt_splash_second"
        android:text="Selamat datang di Aplikasi Kasir"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins"/>

    <TextView
        android:id="@+id/txt_splash_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_splash_second"
        android:gravity="center"
        android:paddingHorizontal="30dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins"
        android:text="Pembayaran mudah dan terpercaya dengan Aplikasi Kasir"
        android:textSize="18sp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_splash_three"
        android:text="NEXT"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/Blue"
        android:fontFamily="@font/poppins_black"
        android:textColor="@color/white"
        android:id="@+id/btn_l1"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        />

</RelativeLayout>