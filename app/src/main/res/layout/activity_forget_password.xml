<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_register"
    tools:context=".ForgetPasswordActivity">

    <ImageView
        android:id="@+id/img_forget"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/white_arrow" />

    <TextView
        android:id="@+id/txt_forgetpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_forget"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/poppins_black"
        android:text="FORGET PASSWORD"
        android:textColor="@color/primary_color"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/txt_forgetpass"
        android:layout_marginTop="50dp"
        android:padding="30dp"
        android:id="@+id/ly">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:hint="Email"
            android:fontFamily="@font/poppins_semibold"
            android:background="@drawable/button_shape"
            android:paddingLeft="10dp"
            android:id="@+id/edt_forgetemail"
            android:elevation="5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:hint="Password"
            android:fontFamily="@font/poppins_semibold"
            android:background="@drawable/button_shape"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"
            android:id="@+id/edt_forgetpass"/>

        <EditText
            android:id="@+id/edt_forgetrepass"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/poppins_semibold"
            android:hint="Re-Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly"
        android:text="KONFIRM"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_black"
        android:id="@+id/btn_forgetkonfirm"
        android:layout_marginTop="70dp"/>

</RelativeLayout>